{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "es2019", "es2018", "es2017", "dom"],
    "target": "es2020"
  },
  "include": [
    "lib/**/*.ts",
    "examples/**/*.ts",
    "examples/**/*.json",
    "test/**/*.ts"
  ]
}
